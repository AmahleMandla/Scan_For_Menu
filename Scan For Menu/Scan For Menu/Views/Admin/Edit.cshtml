@using Scan_For_Menu.Helpers;
@using Microsoft.AspNetCore.Http;
@model Scan_For_Menu.Models.MenuItem

@{ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml"; }

<div class="container-fluid" style="align-content:center; justify-content:center">
    <h1>Edit Item</h1>
    <h4>@Model.ItemName</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input asp-for="ItemImage" hidden />
                <input asp-for="ItemId" hidden />
                <input asp-for="CategoryId" hidden />

                <div class="form-group">
                    <div class="d-xl-inline-flex justify-content-around">
                        <img width=250 height=250 style="border:6px solid yellowgreen; border-radius:10%" img src="~/MenuItem/@Model.ItemImage" />

                        <div>
                            <label asp-for="Image" class="control-label"></label>
                            <input asp-for="Image" type="file" name="Image" accept="image/jpeg" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <br />
                    <select asp-for="CategoryName" id="categoryName">
                        <option value="@Model.CategoryName"> @Model.CategoryName</option>
                        <option value="Burger">Burger</option>
                        <option value="Steaks and Grills">Steaks and Grills</option>
                        <option value="Drinks">Drinks</option>
                        <option value="Deserts">Deserts</option>
                        <option value="Soup, Salad and Sides">Soup, Salad and Sides</option>
                    </select>
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ItemName" class="control-label"></label>
                    <input asp-for="ItemName" class="form-control" />
                    <span asp-validation-for="ItemName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ItemDescr" class="control-label"></label>
                    <textarea asp-for="ItemDescr" id="ItemDescr" class="form-control" placeholder="Add Description here..."> </textarea>
                    <span asp-validation-for="ItemDescr" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ItemPrice" class="control-label"></label>
                    <input asp-for="ItemPrice" class="form-control" min="0.0" max="5000.0" />
                    <span asp-validation-for="ItemPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MealPrepTime" class="control-label"></label>
                    <input asp-for="MealPrepTime" class="form-control" min="0" max="60" />
                    <span asp-validation-for="MealPrepTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="d-flex flex-column  justify-content-around mx-3">
                        <input type="submit" formmethod="post" formenctype="multipart/form-data" value="Update" class="btnConfirm" id="submitBtn" />
                        <br />
                        <button asp-controller="Admin" asp-action="ViewItems" class="btn-secondary " style="border-radius: 10px; font-family: 'Poppins', sans-serif; height: 40px; width: 400px; ">Cancel</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>

    </div>
</div>

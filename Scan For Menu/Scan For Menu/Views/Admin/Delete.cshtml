@model Scan_For_Menu.Models.MenuItem
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

@{
    var image = Model.ItemName + ".jpg";
}
<div>
    <div class="d-flex justify-content-center">
        <h3> Are you sure you want to delete ?</h3>
    </div>
    <div class="d-flex flex-column justify-content-center">
        <div class="card justify-content-center">
            <div class="card-header">
                <img width=300 height=300 src="~/MenuItem/@image" alt="Alternate Text" />
                <h3>@Model.ItemName</h3>
            </div>
            <div class="card-body">
                <h4>R @Model.ItemPrice</h4>
                <h6>@Model.ItemDescr</h6>
                <h5>@Model.CategoryName</h5>
            </div>
            <div class="card-footer">
                <div class="d-inline-flex justify-content-center">
                    <a asp-controller="Admin" asp-route-id="@Model.ItemId" asp-action="DeletePost" class="btn btn-success">Delete</a>
                    <a asp-controller="Admin" asp-action="ViewItems" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </div>

    </div>
</div>

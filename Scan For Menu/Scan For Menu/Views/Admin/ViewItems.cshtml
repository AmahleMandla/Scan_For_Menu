@model dynamic   
@{
    ViewData["Title"] = "ViewItems";
    Layout = "~/Views/Shared/_layOut_Admin.cshtml";
}

@{ 
    var MenuItems = Model.MenuItem;
    var Category = Model.FoodCategory;
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model != null )
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Meal prep Estimated time</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (MenuItem obj in MenuItems)
                {
                    <tr>
                        <td width="15%">@obj.ItemName</td>
                        <td width="20%">@obj.ItemDescr</td>
                        <td width="15%"> @String.Format("R {0}", @obj.ItemPrice)</td>
                        <td width="15%"><img width=100 height=100 src="~/MenuItem/@obj.ItemImage" /></td>
                        <td width="15%">@String.Format("{0} minutes",@obj.MealPrepTime)</td>
                        @foreach(FoodCategory objf in Category) {
                            if (obj.CategoryId == objf.CategoryId)
                            {
                             <td width="15%">@objf.CategoryName</td>
                                break;
                            }
                        }
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@obj.ItemId" asp-action="Edit" class="btn btn-primary mx-2"> Edit </a>
                                <a asp-controller="Category" asp-route-Id="@obj.ItemId" asp-action="Delete" class="btn btn-danger mx-2"> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }

</div>


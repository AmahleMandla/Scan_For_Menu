@model Scan_For_Menu.Models.ChoosePayment
@{
    ViewData["Title"] = "choosePayment";
    Layout = "~/Views/Shared/_Layout.cshtml";       // soumya


}

<div>
    <a asp-controller="Cart" asp-action="ViewCart">back</a>

</div>


<h2>Payment</h2>
<div class="jumbotron"></div>
<h3> Total</h3>
<h4> R @ViewBag.totalAmt</h4>
<hr class="my-4">

<form method="post"  asp-controller="Order" asp-action="payment">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <h4>Choose payment option</h4>
        <input  class="form-control" type="radio" id="cashID" name="payment" value="Cash">
        <label  class="control-label" for="cashID">Cash </label><br>
        <input  class="form-control" type="radio" id="CardID" name="payment" value="Card">
        <label  class="control-label" for="cardID">Card </label><br />
    </div>
    <div>
        <input name="simple_button" type="submit" value="Proceed"/>
    </div>
</form>



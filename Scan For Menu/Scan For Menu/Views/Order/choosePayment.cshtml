@model Scan_For_Menu.Models.ChoosePayment
@{
    ViewData["Title"] = "choosePayment";
    Layout = "~/Views/Shared/_LayoutPayment.cshtml";

}

    <div class="d-flex justify-content-start m-5">
        <a class="btn btn-secondary" asp-controller="Cart" asp-action="ViewCart">Back to cart</a>
    </div>

<section style="height:100%">
    <br /><br />
    <div class="d-flex justify-content-around" style="font-family:'Times New Roman', Times, serif;">
        <h3 style="color: black;"> Total amount due: </h3>
        <h4> R @ViewBag.totalAmt</h4>
    </div>
    <br />
    <div class="container">

        <div class="row mbr-justify-content-center">

            <a asp-controller="Order" asp-action="payOnline" style="text-decoration:none">
                <div class="col-lg-6 mbr-col-md-10">
                    <div class="wrap">
                        <div class="ico-wrap">
                            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-credit-card-2-back" viewBox="0 0 16 16">
                                <path d="M11 5.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-1z" />
                                <path d="M2 2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H2zm13 2v5H1V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1zm-1 9H2a1 1 0 0 1-1-1v-1h14v1a1 1 0 0 1-1 1z" />
                            </svg>
                        </div>
                        <div class="text-wrap vcenter">
                            <h2 class="mbr-fonts-style mbr-bold mbr-section-title3 display-5"> Add <span>Credit card</span></h2>
                        </div>
                    </div>
                </div>
            </a>

            <a asp-controller="Order" asp-action="payment" style="text-decoration:none; text-decoration-color: inherit">
                <div class="col-lg-6 mbr-col-md-10" role="button">
                    <div class="wrap">
                        <div class="ico-wrap">
                            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-cash" viewBox="0 0 16 16">
                                <path d="M8 10a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" />
                                <path d="M0 4a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V4zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V6a2 2 0 0 1-2-2H3z" />
                            </svg>
                        </div>
                        <div class="text-wrap vcenter">
                            <h2 class="mbr-fonts-style mbr-bold mbr-section-title3 display-5"> Pay <span> cash</span></h2>
                        </div>
                    </div>
                </div>
            </a>

        </div>

    </div>

</section>
<section></section>
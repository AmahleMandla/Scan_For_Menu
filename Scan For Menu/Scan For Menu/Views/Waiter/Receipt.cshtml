@model List<ReportData>
@{
    ViewData["Title"] = "Receipt";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}
<div class="container" style="width:inherit; max-height:inherit;">
    <br />
    <div class="d-flex justify-content-center"><img width="100" height="100" class="logo_image" src="~/Images/logo.jpeg" /><h1 style="color:dimgrey">Amasole Steakhouse</h1><img width="100" height="100" class="logo_image" src="~/Images/logo.jpeg" /></div>
    <br /><br />
          <div class="d-inline-flex justify-content-between">
              <a class="btn btn-secondary" asp-controller="Waiter" asp-action="Index">  Back to Receipts</a>
              <a asp-controller="Waiter" asp-action="PrintBill" onclick="print('snackbar1')" ><i class="fas fa-print"></i></a>
              <div id="snackbar1"> Printer successfully called</div>
          </div>
    <br />
    <br />
   
<div class="d-flex flex-column justify-content-center" style="border: 4px solid black; width:650px">
    <div class="d-flex justify-content-center">
        <div class="d-flex justify-content-center"><img width="100" height="100" class="logo_image" src="~/Images/logo.jpeg" /><h1 style="color:dimgrey; font-family: monospace sans-serif">Amasole Steakhouse</h1></div>
        <div>
            <h2 font-family: monospace sans-serif">Order Num: @ViewBag.OrderNum</h2>
        </div>

    </div>
    <br/>
    <br/>
    <div class="card">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <h3 font-family: monospace sans-serif">
                    ITEM NAME
                </h3>
                <h3 font-family: monospace sans-serif">QUANTITY</h3>
                <h3 font-family: monospace sans-serif">PRICE</h3>
                <h3 font-family: monospace sans-serif"> TOTAL</h3>
            </div>
        </div>
        @foreach (var obj in Model)
        {
            <div class="card-body text-center">
                <div class="d-flex justify-content-between">
                    <h5 font-family: monospace sans-serif"> @obj.itemName </h5>
                    <h5 font-family: monospace sans-serif"> @obj.itemQnty </h5>
                    <h5 font-family: monospace sans-serif">R @obj.LineTotal</h5>
                    <h5 font-family: monospace sans-serif">R @obj.LineTotal* @obj.itemQnty</h5>
                </div>
            </div>
        }
        <div class="d-inline-flex justify-content-end m-5">
            <h3  font-family: monospace sans-serif">
                SubTotal : R @ViewBag.subtot
            </h3>

        </div>
        <div class="d-inline-flex justify-content-end m-5">
            <h3 font-family: monospace sans-serif">Gratuity : R @ViewBag.gratuity</h3>
        </div>
        <div class="d-inline-flex justify-content-end m-5">
            <h3 font-family: monospace sans-serif">Total : R @ViewBag.Total</h3>
        </div>
        <div class="d-inline-flex justify-content-center m-5">
            <h3 font-family: monospace sans-serif">********* Thank you ***********</h3>
        </div>

    </div>
</div>

    
</div>


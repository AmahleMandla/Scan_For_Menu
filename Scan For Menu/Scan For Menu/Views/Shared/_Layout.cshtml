<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Scan_For_Menu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Allison&display=swap" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" />
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <script src = "~/js/site.js" language = "javascript/jquery" type = "text/javascript"></script>
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar_container">
                <div class="logo_container">
                    <a class="logo" asp-area="" asp-controller="MenuItem" asp-action="Menu">
                        <img class="logo_image" src="~/Images/logo.jpeg" />Amasole Steakhouse
                    </a>

                </div>
                <br />
                <div class="nav_itemCont">
                    <ul class="navbar_menu">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <!--create a menu item controller-->
                            <a class="nav-link" asp-area="" asp-controller="MenuItem" asp-action="Menu">Menu</a>
                        </li>
                    </ul>
                    <ul class="nav_cart">
                        <li class="nav_cartitem">
                            <a style="text-decoration:none; color:#555;" class="fas fa-shopping-cart" asp-area="" asp-controller="Cart" asp-action="ViewCart"></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Scan_For_Menu - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
